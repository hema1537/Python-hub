#include <stdio.h>

int main() {

  float bs, da, hra, gs;

  printf("\nEnter Your Basic Salary: ");
  scanf("%f", &bs);

  da = bs * 0.4;
  hra = bs * 0.2;
  gs = bs + da + hra;

  printf("\nBasic Salary: %f", bs);
  printf("\nDA: %f", da);
  printf("\nHRA: %f", hra);
  printf("\nGross Salary: %f", gs);

  return 0;
}

output:
Enter basic salary:5000
hra:2000
da:1000

