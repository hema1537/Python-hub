#include <stdio.h>

#define PI 3.14159  // Constant value for pi (can be adjusted for higher precision)

int main() {
  float radius, area;

  printf("Enter the radius of the circle: ");
  scanf("%f", &radius);

  area = PI * radius * radius;

  printf("The area of the circle is: %.2f\n", area);  // Format output with 2 decimals

  return 0;
}
